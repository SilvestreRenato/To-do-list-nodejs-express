<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="	https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/assets/Css/style.css">
  <script src="	https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" defer></script>
  <title>Lista de Tarefas</title>
</head>
<body class="bg-dark">
  <%- include('partials/header') %>

  <div class="vh-100">
    <h2 class="main-text"><%= taskList.title %></h2>
    <form action="/createTask/<%= taskList.title %>" method="post">
      <div class="input-group mb-3">
        <input type="text" class="form-control bg-dark text-light" name="title">
        <button class="btn btn-primary" type="submit">Criar</button>
      </div>
    </form>
    <ul class="list-group">
      <% taskList.taskArr.forEach(task => { %>
       <li class="list-group-item bg-dark main-text p-3">
        <%= task.taskName %>
        <form action="/complete/<%= task.title %>" method="post">
          <button type="submit" class="btn btn-success btn-sm position-absolute top-50 end-0 translate-middle-y me-3">Completar</button>
        </form>
       </li>
      <% }) %>

    </ul>

  </div>

  <%- include('partials/footer') %>
</body>
</html>