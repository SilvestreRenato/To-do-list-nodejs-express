<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="	https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/assets/Css/style.css">
  <script src="	https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" defer></script>
  <title>Gerenciador de Listas</title>
</head>


<body class="bg-dark">

  <%- include('partials/header') %>


  <div class="vh-100">
    <h2 class="main-text">Lista de Tarefas</h2>
    <ul class="list-group">
      <% tasks.forEach(task => { %>
        <li class="list-group-item bg-dark main-text p-3" id="<%= task.title %>">
          <a href="/task-list/<%= task.title %>" class="text-decoration-none main-text">
            <%= task.title %>
          </a>
          <form action="/delete/<%= task.title %>" method="post">
            <button type="submit" class="btn btn-danger btn-sm position-absolute top-50 end-0 translate-middle-y me-3">Excluir</button>
          </form>
        </li>
      <% }) %>
    </ul>
    <button class="btn btn-primary btn-md mt-3"><a class="text-decoration-none main-text" href="/createList">Nova Lista de Tarefas</a></button>
  </div>

  <%- include('partials/footer') %>

</body>


</html>